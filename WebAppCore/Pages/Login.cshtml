@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div>
        <label>Username:</label>
        <input type="text" asp-for="LoginRequest.Username" required />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" asp-for="LoginRequest.Password" required />
    </div>
    <div>
        <button type="submit">Login</button>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p style="color: red">@Model.ErrorMessage</p>
}
